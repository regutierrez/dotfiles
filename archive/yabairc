# yabai -m rule --add app="^Arc$" manage=off 
# yabai -m rule --add app="^Arc$" title="" manage=off mouse_follows_focus=off
yabai -m rule --add app="^Arc$" title="Pael" manage=off
yabai -m rule --add app="^Marta$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add subrole="^AXSystemDialog$" manage=off mouse_follows_focus=off
yabai -m rule --add subrole="^Picture in Picture$" manage=off mouse_follows_focus=off
